<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTh"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="po.mybus.com.MainActivity">


	<include layout="@layout/custome_toolbar" />

	<ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:scaleType="fitXY"
		android:adjustViewBounds="true"
        android:src="@drawable/banner1"
		android:layout_marginBottom="50dp"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="start"
		android:layout_marginBottom="30dp"
		android:orientation="horizontal">

		<de.hdodenhof.circleimageview.CircleImageView
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/profile_image"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:src="@drawable/bis"
			app:civ_border_color="#738ffa"
			app:civ_border_width="5dp" />
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:orientation="vertical"
			android:layout_marginLeft="10dp">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Supiranda Hadir"
				android:textSize="20sp"
				android:visibility="visible" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Luthansa Group"
				android:textSize="15sp"
				android:visibility="visible"
				android:layout_marginBottom="10dp"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="5.0 point"
				android:textSize="15sp"
				android:visibility="visible" />
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingBottom="20dp"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:background="@color/colorSec">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="start"
				android:padding="10dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:text="0"
						android:textColor="#ec441f"
						android:textSize="35sp"
						android:visibility="visible" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:text="Job Complete"
						android:textSize="20sp"
						android:visibility="visible" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="end"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:text="100%"
						android:textColor="#ec441f"
						android:textSize="35sp"
						android:visibility="visible" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:text="Penilaian"
						android:textSize="20sp"
						android:visibility="visible" />
				</LinearLayout>
			</LinearLayout>

		</android.support.v7.widget.CardView>

	</LinearLayout>

</LinearLayout>