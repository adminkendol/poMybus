<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start"
                android:text="Jakarta Selatan"/>
            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start"
                android:text="Cibodas, Bogor - Jawa Barat" />
            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:text="05 Desember 2017" />
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tgl"
                android:layout_toEndOf="@+id/tgl"
                android:layout_toRightOf="@+id/tgl"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:text="IDR 2.300.000"
                android:textSize="18sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorButtB"
            android:layout_gravity="right"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTh"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text="Sisa waktu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTh"
                android:textSize="17sp"
                android:id="@+id/sisaDay"
                android:text="2 Hari"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTh"
                android:textSize="12sp"
                android:id="@+id/sisaMnt"
                android:text="10:45 Menit"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
